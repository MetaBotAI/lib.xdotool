#!/usr/bin/bash

# Desktop option

Runescape.gnome_right_half_screen(){
  export X=1004
  export Y=109
  export sizeX=926
  export sizeY=1016

  xdotool windowmove $Runescape $X $Y
  xdotool windowsize $Runescape $sizeX $sizeY
}

find_Runescape(){
  pids=($(xdotool search --classname "RuneScape"))
  export Runescape=${pids[-1]}
}

find_Runescape
Runescape.gnome_right_half_screen
